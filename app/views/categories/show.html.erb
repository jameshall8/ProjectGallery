<div id="gallery">
<% if logged_in? %>
  <h2><%= @category.name %> <small class="float-right"><%= link_to "Edit", edit_category_path %> </small></h2>
<% else %> 
<h2> <%= @category.name %> </h2>
<% end %>

         
    
    <% if @images.exists? %>
          <% @images.each_slice(4) do |image| %>
                  <div class = "row">
                    <%image.each do |image| %>
                      <div class="col-md-3">
                        <div class="photo photo-type-line">
                            <a href = "<%= image.image_url() %>" class="photo-hover"  data-fancybox="<%= image.category_id %>" data-caption="<%= image.image_title %>">
                                <div class="photo-info">
                                  <div class="headline"><%= image.image_title %></div>
                                    <div class="line"></div>
                                      <div class="desc"><%= image.image_description %></div>
                                      </div>
                                          <div class="mask"></div>
                                      </a>
                                        <div class="img-thumbnail photo-img  img-fluid"><%= image_tag image.image_url(:thumb) %></div>
                                    </div>
                                  </div>
                                  
                                <% end %>

                              </div>
                              <% end %>
                            <% else %>
                            <p> There are no images! </p>


<% end %>
</div>
        
